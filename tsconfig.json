{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "rootDirs": ["src", "."], // Adding root directories for better path resolution
    "outDir": "dist",        // Specify output directory for both server and client
  },
  "include": ["src/**/*", "server.ts"],
  "exclude": ["node_modules"]
}